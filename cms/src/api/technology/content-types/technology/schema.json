    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "AI",
        "Energy",
        "Biotech",
        "Space",
        "Other"
      ]
    },
    "maturityLevel": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Emerging",
        "Growth",
        "Mature"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
